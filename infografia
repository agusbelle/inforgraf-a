    <script type="module">
        // This is a mock of the Gemini API call for demonstration purposes.
        // In a real environment, this would be a fetch call to the actual API endpoint.
        async function callGeminiAPI(prompt) {
            // Simulate API latency
            await new Promise(resolve => setTimeout(resolve, 1500));


            const apiKey = ""; // The API key is handled by the execution environment.
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
           
            const payload = {
                contents: [{
                    role: "user",
                    parts: [{ text: prompt }]
                }]
            };


            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });


                if (!response.ok) {
                    throw new Error(`API call failed with status: ${response.status}`);
                }


                const result = await response.json();
               
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    // Basic Markdown to HTML conversion
                    let text = result.candidates[0].content.parts[0].text;
                    text = text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>'); // Bold
                    text = text.replace(/\*(.*?)\*/g, '<em>$1</em>'); // Italics
                    text = text.replace(/### (.*?)\n/g, '<h3>$1</h3>'); // H3
                    text = text.replace(/## (.*?)\n/g, '<h2>$1</h2>'); // H2
                    text = text.replace(/^- (.*?)\n/gm, '<ul><li>$1</li></ul>'); // Naive list
                    text = text.replace(/<\/ul>\n<ul>/g, ''); // Merge lists
                    text = text.replace(/\n/g, '<br>'); // Newlines
                    return text;
                } else {
                   return "No se pudo obtener una respuesta v√°lida de la IA. Por favor, int√©ntalo de nuevo.";
                }
            } catch (error) {
                console.error("Error calling Gemini API:", error);
                return `Error al contactar la IA: ${error.message}. Revisa la consola para m√°s detalles.`;
            }
        }


        // --- UI and Event Handling ---
        const modal = document.getElementById('geminiModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalContent = document.getElementById('modalContent');
        const loader = document.getElementById('loader');
        const closeModalBtn = document.getElementById('closeModalBtn');


        function showModal(title) {
            modalTitle.textContent = title;
            modal.classList.remove('hidden');
            setTimeout(() => modal.style.opacity = 1, 10);
            modal.querySelector('.modal-content').style.transform = 'scale(1)';
            loader.classList.remove('hidden');
            modalContent.classList.add('hidden');
        }


        function hideModal() {
            modal.style.opacity = 0;
            modal.querySelector('.modal-content').style.transform = 'scale(0.95)';
            setTimeout(() => modal.classList.add('hidden'), 300);
        }


        function displayContent(content) {
            loader.classList.add('hidden');
            modalContent.innerHTML = content;
            modalContent.classList.remove('hidden');
        }


        closeModalBtn.addEventListener('click', hideModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                hideModal();
            }
        });


        document.getElementById('generateSummaryBtn').addEventListener('click', async () => {
            showModal('‚ú® Resumen Ejecutivo por IA');
            const prompt = "Eres un analista de recursos humanos. Basado en los siguientes datos de una infograf√≠a de clima laboral (Puntuaci√≥n promedio general: 9.11/10; Ubicaciones destacadas con alta satisfacci√≥n: Brasil, M√©xico, Portugal; √Åreas de oportunidad con baja satisfacci√≥n: Personal remoto, Argentina; √Årea con alta volatilidad: Guatemala), escribe un resumen ejecutivo conciso (m√°ximo 3 p√°rrafos) para la alta direcci√≥n. El tono debe ser profesional y directo. Formatea la respuesta en HTML simple.";
            const summary = await callGeminiAPI(prompt);
            displayContent(summary);
        });


        document.getElementById('generateActionPlanBtn').addEventListener('click', async () => {
            showModal('‚ú® Plan de Acci√≥n por IA');
            const prompt = "Eres un consultor experto en clima laboral. Para las siguientes √°reas de oportunidad identificadas en una empresa (1. Personal remoto con baja puntuaci√≥n de satisfacci√≥n. 2. Oficina de Argentina con baja puntuaci√≥n. 3. Oficina de Guatemala con alta volatilidad en su puntuaci√≥n), genera un plan de acci√≥n. Para cada una de las 3 √°reas, proporciona 2 recomendaciones espec√≠ficas y creativas. Considera las particularidades culturales donde sea relevante (ej. Argentina). El objetivo es mejorar la moral y la estabilidad. Formatea la respuesta usando Markdown (t√≠tulos, negritas y listas).";
            const plan = await callGeminiAPI(prompt);
            displayContent(plan);
        });
       
        // --- Chart Generation ---
        document.addEventListener('DOMContentLoaded', function() {
            const chartData = [
                { score: 9.44, label: "üáßüá∑ Brasil" },
                { score: 9.43, label: "üá≤üáΩ M√©xico" },
                { score: 9.38, label: "ÔøΩüáπ Portugal" },
                { score: 9.34, label: "üá®üá¥ Colombia" },
                { score: 9.31, label: "üá¨üáπ Guatemala" },
                { score: 9.16, label: "üáÆüá≥ India" },
                { score: 9.02, label: "üá∫üá∏ USA" },
                { score: 8.99, label: "üá∫üá¶ Ucrania" },
                { score: 8.99, label: "üáµüá± Polonia" },
                { score: 8.68, label: "üá¶üá∑ Argentina" },
                { score: 8.40, label: "üíª Remoto" }
            ];
            const chartContainer = document.getElementById('chart-container');


            chartData.forEach(item => {
                const score = item.score;
                const label = item.label;
                const widthPercentage = (score / 10) * 100;


                const barContainer = document.createElement('div');
                barContainer.className = 'flex items-center mb-2';


                const labelElement = document.createElement('div');
                labelElement.className = 'w-1/4 text-right pr-4 text-gray-600 font-medium';
                labelElement.textContent = label;


                const barWrapper = document.createElement('div');
                barWrapper.className = 'w-3/4 bg-gray-200 rounded-full h-6 overflow-hidden';


                const bar = document.createElement('div');
                bar.className = 'chart-bar bg-gradient-to-r h-6 rounded-full flex items-center justify-end pr-3 text-white font-bold';
               
                if (score >= 9.3) {
                    bar.classList.add('from-green-500', 'to-green-400');
                } else if (score >= 9.0) {
                    bar.classList.add('from-blue-500', 'to-teal-400');
                } else if (score >= 8.5) {
                    bar.classList.add('from-yellow-500', 'to-yellow-400');
                } else {
                    bar.classList.add('from-orange-500', 'to-red-400');
                }
               
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = `${widthPercentage}%`;
                }, 100);


                const scoreText = document.createElement('span');
                scoreText.textContent = score.toFixed(2);
               
                bar.appendChild(scoreText);
                barWrapper.appendChild(bar);
                barContainer.appendChild(labelElement);
                barContainer.appendChild(barWrapper);
               
                chartContainer.appendChild(barContainer);
            });
        });
    </script>
